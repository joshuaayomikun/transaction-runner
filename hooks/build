#!/bin/bash
docker build --build-arg DB_DATABASE="$DB_DATABASE" --build-arg DB_DIALECT="$DB_DIALECT" --build-arg DB_HOST="$DB_HOST" --build-arg DB_PASSWORD="$DB_PASSWORD" --build-arg DB_PORT="$DB_PORT" --build-arg DB_USERNAME="$DB_USERNAME" --build-arg DEV_DATABASE_URL="$DEV_DATABASE_URL" --build-arg DEV_HOST="$DEV_HOST" --build-arg MAIL_PASSWORD="$MAIL_PASSWORD" --build-arg MAIL_SERVICE="$MAIL_SERVICE" --build-arg MAIL_USER="$MAIL_USER" --build-arg NODE_ENV="$NODE_ENV" --build-arg PORT="$PORT" --build-arg PRODUCTION_HOST="$PRODUCTION_HOST" --build-arg TOKEN_SECRET="$TOKEN_SECRET" --build-arg USE_MAIL="$USE_MAIL" -f $DOCKERFILE_PATH -t $IMAGE_NAME .