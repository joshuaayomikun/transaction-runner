#!/bin/bash
docker build --build-arg DB_DATABASE=$DB_DATABASE DB_DIALECT=$DB_DIALECT DB_HOST=$DB_HOST DB_PASSWORD=$DB_PASSWORD DB_PORT=$DB_PORT DB_USERNAME=$DB_USERNAME DEV_DATABASE_URL=$DEV_DATABASE_URL DEV_HOST=$DEV_HOST MAIL_PASSWORD=$MAIL_PASSWORD MAIL_SERVICE=$MAIL_SERVICE MAIL_USER=$MAIL_USER NODE_ENV=$NODE_ENV PORT=$PORT PRODUCTION_HOST=$PRODUCTION_HOST TOKEN_SECRET=$TOKEN_SECRET USE_MAIL=$USE_MAIL -f $DOCKERFILE_PATH -t $IMAGE_NAME .